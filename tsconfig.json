{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {},
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/*.ts", 
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
