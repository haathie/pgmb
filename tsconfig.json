{
  "compilerOptions": {
    "lib": ["ESNext", "ESNext.Array"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {},
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "benchmark/*.ts",
    "tests/*.ts",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
